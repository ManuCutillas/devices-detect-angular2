    "copyfiles": "^2.2.0",
    "@types/jasmine": "^2.8.11",
    "@types/jasminewd2": "^2.0.8",
    "@types/jest": "^25.2.1",
    "cpr": "^3.0.1",
    "del-cli": "^3.0.0",
